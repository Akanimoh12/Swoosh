# ===========================================
# SWOOSH FRONTEND CONFIGURATION
# ===========================================

# Backend API URL
VITE_API_URL=http://localhost:3001

# WebSocket URL
VITE_WS_URL=ws://localhost:3001

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
VITE_WALLETCONNECT_PROJECT_ID=your_project_id_here

# Network Mode: testnet | mainnet | all
# Controls which chains are available in the app
VITE_NETWORK_MODE=testnet

# App Version (optional, defaults to package.json version)
VITE_APP_VERSION=0.1.0

# ===========================================
# SMART CONTRACT ADDRESSES (Arbitrum Sepolia)
# ===========================================
# Fill these after running contracts/deploy/deploy.sh
VITE_INTENT_VALIDATOR_ADDRESS=
VITE_ROUTE_EXECUTOR_ADDRESS=
VITE_SETTLEMENT_VERIFIER_ADDRESS=

# ===========================================
# CCIP ROUTER ADDRESSES
# ===========================================
VITE_CCIP_ROUTER_ARBITRUM_SEPOLIA=0x2a9c5afb0d0e4bab2bcdae109ec4b0c4be15a165
VITE_CCIP_ROUTER_BASE_SEPOLIA=0xD3b06cEbF099CE7DA4AcCf578aaebFDBd6e88a93

# ===========================================
# CHAIN CONFIGURATION
# ===========================================
VITE_ARBITRUM_SEPOLIA_CHAIN_ID=421614
VITE_BASE_SEPOLIA_CHAIN_ID=84532

# ===========================================
# TOKEN ADDRESSES (Arbitrum Sepolia Testnet)
# ===========================================
VITE_USDC_ARBITRUM_SEPOLIA=0x75faf114eafb1BDbe2F0316DF893fd58CE46AA4d
VITE_WETH_ARBITRUM_SEPOLIA=0x980B62Da83eFf3D4576C647993b0c1D7faf17c73
VITE_LINK_ARBITRUM_SEPOLIA=0xb1D4538B4571d411F07960EF2838Ce337FE1E80E

# ===========================================
# BLOCK EXPLORER URLS
# ===========================================
VITE_ARBISCAN_URL=https://sepolia.arbiscan.io
VITE_BASESCAN_URL=https://sepolia.basescan.org

# ===========================================
# OPTIONAL FEATURE FLAGS
# ===========================================
# Enable analytics tracking (default: false in development)
VITE_ENABLE_ANALYTICS=false

# Enable service worker for PWA (default: false)
VITE_ENABLE_PWA=false

# Debug mode for extra logging (default: false)
VITE_DEBUG=false
