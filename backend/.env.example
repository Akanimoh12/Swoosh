# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Database (PostgreSQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://swoosh:swoosh_dev_password@localhost:5432/swoosh_db

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.1

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Cache TTLs (in seconds)
CACHE_TTL_ROUTES=300
CACHE_TTL_TOKEN_PRICES=60
CACHE_TTL_GAS_PRICES=30
CACHE_TTL_SIMILAR_INTENTS=300

# API Keys
ONEINCH_API_KEY=
CCIP_ROUTER_ADDRESS=

# CORS
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# OpenAI Timeout (milliseconds)
OPENAI_TIMEOUT=5000

# Supported Chains (comma-separated chain IDs)
SUPPORTED_CHAINS=42161,8453,10

# Supported Tokens (comma-separated addresses)
SUPPORTED_TOKENS=0x0000000000000000000000000000000000000000
